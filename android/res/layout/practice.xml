<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/practice_mainlayout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
 
    <!-- the five count blocks in the top bar -->
    <LinearLayout android:id="@+id/count_bar"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#FF000000"
        android:padding="2dp" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="2dp" >
            
            <TextView style="@style/count_label"
                android:text="Studying" />
            <TextView android:id="@+id/study_num"
                style="@style/count_num"
                android:text="0" />
        </LinearLayout> 
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="2dp" >
            
            <TextView style="@style/count_label"
                android:text="Right 1x" />
            <TextView android:id="@+id/right1_num"
                style="@style/count_num"
                android:text="0" />
        </LinearLayout> 
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="2dp" >
            
            <TextView style="@style/count_label"
                android:text="Right 2x" />
            <TextView android:id="@+id/right2_num"
                style="@style/count_num"
                android:text="0" />
        </LinearLayout> 
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="2dp" >
            
            <TextView style="@style/count_label"
                android:text="Right 3x" />
            <TextView android:id="@+id/right3_num"
                style="@style/count_num"
                android:text="0" />
        </LinearLayout> 
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="2dp" >
            
            <TextView style="@style/count_label"
                android:text="Learned" />
            <TextView android:id="@+id/learned_num"
                style="@style/count_num"
                android:text="0" />
        </LinearLayout> 

    </LinearLayout>
    <!-- end top bar layout -->

    <ImageButton android:id="@+id/practice_showreadingbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/count_bar"
        android:layout_marginTop="30dp"
        android:background="@drawable/practice_btn_showreading" />
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/practice_showreadingbutton"
        android:layout_marginTop="60dp"
        android:background="@drawable/practice_btn_unrevealed_mini" />
    
    <!-- the answer button -->
    <RelativeLayout android:id="@+id/practice_answerbutton_frame"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center" >

        <ImageButton android:id="@+id/practice_answerbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/practice_btn_unrevealed"
            android:background="@drawable/practice_btn_bg"
            android:onClick="PracticeFragment_reveal" />

<!-- TODO - buttons selectors not changing on press -->
 
        <!-- the options button block -->
        <RelativeLayout android:id="@+id/practice_options_block"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone" 
            android:background="@drawable/practice_btn_bg" >

            <ImageButton android:id="@+id/optionblock_btn_zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_actions_flip"
                android:onClick="PracticeFragment_practiceClick" />
            <ImageButton android:id="@+id/optionblock_btn_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/optionblock_btn_zero"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_right_flip"
                android:onClick="PracticeFragment_practiceClick" />
            <ImageButton android:id="@+id/optionblock_btn_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/optionblock_btn_one"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_wrong_flip"
                android:onClick="PracticeFragment_practiceClick" />
            <ImageButton android:id="@+id/optionblock_btn_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/optionblock_btn_two"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_goaway_flip"
                android:onClick="PracticeFragment_practiceClick" />
    
        </RelativeLayout>
        <!-- end practice_options_block -->

    </RelativeLayout> 
    <!-- end practice_anwerbutton_frame -->


    <!-- the info just above the answer button -->
    <LinearLayout android:id="@+id/practice_info_layout"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/practice_answerbutton_frame"
        android:padding="2dp" >

        <TextView android:id="@+id/practice_tag_name"
            android:text="This is Temporary text as a place holder"
            android:singleLine="true"
            android:gravity="center"
            android:layout_weight="1"
            style="@style/practice_info" />
        <TextView android:id="@+id/practice_tag_count"
            android:text="110/110"
            android:gravity="center"
            android:layout_weight="1"
            style="@style/practice_info" />
    </LinearLayout>

    <!-- the right arrow button above the info -->
    <ImageButton android:id="@+id/practice_rightbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/practice_info_layout"
        android:layout_marginBottom="10dp"
        android:background="@drawable/practice_arrow_flip"
        android:onClick="PracticeFragment_goRight"
        android:visibility="gone" />
    
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@id/practice_answerbutton_frame"
        android:src="@drawable/hh_temp" />

