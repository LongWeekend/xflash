<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/default_display_block"
    android:orientation="horizontal">

    <ImageView android:id="@+id/tag_row_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/tag_row_image" >

        <TextView android:id="@+id/tag_row_top"
            style="@style/tag_row_toplayout" />

        <TextView android:id="@+id/tag_row_bottom"
            style="@style/tag_row_bottomlayout" />

    </LinearLayout>
        
</RelativeLayout>

