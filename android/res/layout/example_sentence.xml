<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/example_mainlayout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
 
    <!-- the five count blocks in the top bar -->
    <LinearLayout android:id="@+id/example_sentence_bar"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#FF000000"
        android:padding="2dp" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="2dp" >
            
            <TextView style="@style/count_label"
                android:text="Studying" />
            <TextView android:id="@+id/es_study_num"
                style="@style/count_num"
                android:text="0" />
        </LinearLayout> 
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="2dp" >
            
            <TextView style="@style/count_label"
                android:text="Right 1x" />
            <TextView android:id="@+id/es_right1_num"
                style="@style/count_num"
                android:text="0" />
        </LinearLayout> 
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="2dp" >
            
            <TextView style="@style/count_label"
                android:text="Right 2x" />
            <TextView android:id="@+id/es_right2_num"
                style="@style/count_num"
                android:text="0" />
        </LinearLayout> 
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="2dp" >
            
            <TextView style="@style/count_label"
                android:text="Right 3x" />
            <TextView android:id="@+id/es_right3_num"
                style="@style/count_num"
                android:text="0" />
        </LinearLayout> 
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="2dp" >
            
            <TextView style="@style/count_label"
                android:text="Learned" />
            <TextView android:id="@+id/es_learned_num"
                style="@style/count_num"
                android:text="0" />
        </LinearLayout> 

    </LinearLayout>
    <!-- end top bar layout -->

    <!-- the answer button -->
    <RelativeLayout android:id="@+id/example_sentence_answerbutton_frame"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center" >

        <ImageButton android:id="@+id/example_sentence_answerbutton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/practice_btn_unrevealed"
            android:background="@drawable/practice_btn_bg"
            android:onClick="PracticeFragment_reveal" />

        <!-- the options button block -->
        <RelativeLayout android:id="@+id/example_sentence_options_block"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/practice_btn_bg" >

            <ImageButton android:id="@+id/es_optionblock_actions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_actions_flip"
                android:onClick="ExampleSentenceFragment_exampleClick" />
            <ImageButton android:id="@+id/es_optionblock_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/es_optionblock_actions"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_right_flip"
                android:onClick="ExampleSentenceFragment_exampleClick" />
            <ImageButton android:id="@+id/es_optionblock_wrong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/es_optionblock_right"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_wrong_flip"
                android:onClick="ExampleSentenceFragment_exampleClick" />
            <ImageButton android:id="@+id/es_optionblock_goaway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/es_optionblock_wrong"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_goaway_flip"
                android:onClick="ExampleSentenceFragment_exampleClick" />
    
        </RelativeLayout>
        <!-- end practice options block -->

        <!-- the browse button block -->
        <RelativeLayout android:id="@+id/es_browse_options_block"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/practice_btn_bg" >

            <ImageButton android:id="@+id/es_browseblock_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_last_flip"
                android:onClick="PracticeFragment_browseClick" />
            <ImageButton android:id="@+id/es_browseblock_actions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/es_browseblock_last"
                android:layout_marginLeft="18dp"
                android:background="@drawable/btn_actions_flip"
                android:onClick="PracticeFragment_browseClick" />
            <ImageButton android:id="@+id/es_browseblock_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/es_browseblock_actions"
                android:layout_marginLeft="18dp"
                android:background="@drawable/btn_next_flip"
                android:onClick="PracticeFragment_browseClick" />
    
        </RelativeLayout>
        <!-- end browse button block -->


    </RelativeLayout> 
    <!-- end practice_anwerbutton_frame -->

    <!-- our main example sentence content -->
    <ScrollView style="@style/default_scroll_block"
            android:layout_below="@id/example_sentence_bar" 
            android:layout_above="@id/example_sentence_answerbutton_frame" >

        <!-- single child of the scroll view -->
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp" >

            <TextView
                android:layout_width="wrap_content"    
                android:layout_height="wrap_content"    
                android:textColor="#FFFFFFFF"
                android:text="EXAMPLE SENTENCES!"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"    
                android:layout_height="wrap_content"    
                android:textColor="#FFFFFFFF"
                android:text="EXAMPLE SENTENCES!"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"    
                android:layout_height="wrap_content"    
                android:textColor="#FFFFFFFF"
                android:text="EXAMPLE SENTENCES!"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"    
                android:layout_height="wrap_content"    
                android:textColor="#FFFFFFFF"
                android:text="EXAMPLE SENTENCES!"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"    
                android:layout_height="wrap_content"    
                android:textColor="#FFFFFFFF"
                android:text="EXAMPLE SENTENCES!"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"    
                android:layout_height="wrap_content"    
                android:textColor="#FFFFFFFF"
                android:text="EXAMPLE SENTENCES!"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"    
                android:layout_height="wrap_content"    
                android:textColor="#FFFFFFFF"
                android:text="EXAMPLE SENTENCES!"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"    
                android:layout_height="wrap_content"    
                android:textColor="#FFFFFFFF"
                android:text="EXAMPLE SENTENCES!"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"    
                android:layout_height="wrap_content"    
                android:textColor="#FFFFFFFF"
                android:text="EXAMPLE SENTENCES!"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"    
                android:layout_height="wrap_content"    
                android:textColor="#FFFFFFFF"
                android:text="EXAMPLE SENTENCES!"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"    
                android:layout_height="wrap_content"    
                android:textColor="#FFFFFFFF"
                android:text="EXAMPLE SENTENCES!"
                android:layout_marginBottom="20dp" />

        </LinearLayout>  <!-- end single child of scroll view -->

    </ScrollView>
 
</RelativeLayout>


