<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
<LinearLayout android:id="@+id/help_layout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:visibility="visible" >

    <RelativeLayout
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:background="#FFDD0000"
        android:padding="4px" >

        <TextView
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_centerInParent="true"
            android:textColor="#FFFFFFFF"
            android:textSize="32px"
            android:text="Help" />

        <Button
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6px"
            android:text="Ask Us"
            android:onClick="goAskUs" />

    </RelativeLayout>

    <ListView android:id="@+id/help_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:drawSelectorOnTop="false" />

</LinearLayout>

<LinearLayout android:id="@+id/help_content_layout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:visibility="gone" >

    <RelativeLayout
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:background="#FFDD0000"
        android:padding="4px" >

        <Button
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="6px"
            android:onClick="goBackToHelp"
            android:text="To Help" />
        
        <TextView
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_centerInParent="true"
            android:textColor="#FFFFFFFF"
            android:textSize="32px" />

        <Button
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6px"
            android:text="Next >" />

    </RelativeLayout>

    <ListView android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:drawSelectorOnTop="false" />

</LinearLayout>


</LinearLayout>

