<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/table_background" >
     
    <!-- TITLE BAR -->
    <RelativeLayout style="@style/heading_bar" >

        <!-- RIGHT BUTTON -->
        <Button android:id="@+id/askus_button"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="8dp"
            android:text="Ask Us"
            android:onClick="goAskUs"
            style="@style/heading_button" />

        <!-- TEST BUTTON -->
        <Button android:id="@+id/left_button"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:text="Ask Us"
            style="@style/heading_button"
            android:visibility="invisible" />

        <!-- HEADING -->
        <TextView android:id="@+id/help_heading"
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_toRightOf="@id/left_button"
            android:layout_toLeftOf="@id/askus_button"
            android:text="Well what if i need more space" 
            android:gravity="center"
            style="@style/heading_text" />

    </RelativeLayout>

    <ListView android:id="@+id/help_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
     />

</LinearLayout>
