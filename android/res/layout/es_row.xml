<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView android:id="@+id/es_row_number"
        style="@style/es_jp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="1." />

    <Button android:id="@+id/es_read_button"
        style="@style/es_jp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#33000000"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:text="Read" />

    <TextView android:id="@+id/es_sentence_jp"
        style="@style/es_jp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/es_row_number"
        android:layout_toLeftOf="@id/es_read_button"
        android:layout_marginLeft="10dp"
        android:text="Here we have an ex xa mple se nte nce th at will be in Ja pan ese." />

    <TextView android:id="@+id/es_sentence_en"
        style="@style/es_en"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignLeft="@id/es_sentence_jp"
        android:layout_below="@id/es_sentence_jp"
        android:layout_marginBottom="10dp"
        android:text="And now HERE, instead, we have a similar sentence but in English." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_below="@id/es_sentence_en" >
    </LinearLayout>

</RelativeLayout>


