<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >
    <gradient
        android:startColor="#FFD4A49D"
        android:endColor="#FF761406"
        android:angle="270" />
    <stroke
        android:width="1dp"
        android:color="#FF992F2F" />
    <corners
        android:radius="2dp"
        android:bottomLeftRadius="8dp"
        android:topRightRadius="8dp"
        android:bottomRightRadius="0dp"
        android:topLeftRadius="0dp" />
    <size
        android:width="@dimen/default_radio_width"
        android:height="@dimen/default_radio_height" />
</shape>
