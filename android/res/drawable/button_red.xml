<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#FFD57D72"
                android:endColor="#FFA91F0D"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#FF992F2F" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FFE5B0A9"
                android:endColor="#FF982E23"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#FF992F2F" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
