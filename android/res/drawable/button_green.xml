<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#FF98D791"
                android:endColor="#FF0C4406"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#FF062B4E" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FFA8D5A3"
                android:endColor="#FF085000"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#FF053A00" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
