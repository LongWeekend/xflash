<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/button_yellow_startcolor_up"
                android:endColor="@color/button_yellow_endcolor_up"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/button_yellow_strokecolor" />
            <corners
                android:radius="6dp" />
            <padding
                android:top="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/button_yellow_startcolor"
                android:endColor="@color/button_yellow_endcolor"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/button_yellow_strokecolor" />
            <corners
                android:radius="6dp" />
            <padding
                android:top="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
